<p class='card'>
    {{> 'question'}}
</p>

{{#if answers.length}}
    {{#each answers}}
        <div class='card'>
            <div class='card-content'>
                <span class='card-title'>
                    {{ content }}
                </span>
            </div>
            <div class='card-action'>
                <a href='/user/{{ author.id }}' class=''>{{ author.local.email }}</a>
                <span class='answer__date'>{{ createdAt }}</span>
            </div>
        </div>
    {{/each}}
{{/if}}

{{#if currentUser}}
<div class='card'>
    <div class='card-content'>
        <h4 class='card-title'>Add an answer: </h4>
        <form method='POST' action='/question/{{id}}?_method=PUT' class='row'>
        <p class='input-field inline col s10'>
            <label for='content'></label>
            <input type='text' name='content' id=''>
        </p>
        <p class='input-field inline col s2'>
            <input class='btn' type='submit' value='Submit'>
        </p>
        </form>
    </div>
</div>
{{/if}}